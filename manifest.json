{
  "manifest_version": 3,
  "name": "FindAGrave Memorial Extractor",
  "version": "1.0",
  "author": "Miyako Jones",
  "description": "Extracts a list of memorials from a FindAGrave cemetery memorial list page and saves the data in CSV format.",

  "browser_specific_settings": {
    "gecko": {
        "id": "@findagrave-memorial-extractor",
        "data_collection_permissions": {
          "required": [
            "websiteContent",
            "websiteActivity"
          ],
          "optional": []
         }
      }
  },

  "icons": {
    "32": "icons/ext-icon.png"
  },

  "permissions": ["activeTab", "scripting"],

  "host_permissions": [
    "*://*.findagrave.com/*"
  ],

  "background": {
    "scripts": [
      "scripts/browser-polyfill.js",
      "scripts/background.js"
    ],
    "service_worker": "scripts/background.js"
  },

  "action": {}
}